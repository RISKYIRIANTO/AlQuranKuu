<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:paddingTop="20dp"
                android:paddingLeft="80dp"
                android:id="@+id/tvsurahlatin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Al-Fatihah"
                android:textColor="#015353"
                style="@style/TextAppearance.AppCompat.Title">
            </TextView>

            <TextView
                android:paddingTop="2dp"
                android:paddingLeft="80dp"
                android:id="@+id/tvterjemahansurah"
                android:layout_below="@+id/tvsurahlatin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Al-Fatihah">
            </TextView>

            <TextView
                android:id="@+id/tvsuraharab"
                android:paddingTop="30dp"
                android:paddingRight="30dp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الفاتحة"
                android:textColor="#015353"
                android:textSize="20dp"
                android:textStyle="bold">
            </TextView>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg65"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/NomorSurah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:textColor="#015353"
                android:textSize="16dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>